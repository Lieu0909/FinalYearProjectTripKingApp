<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login_Registration.ForgetPage">
    <TextView
        android:id="@+id/TvS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginTop="34dp"
        android:text="Forget Password?"
        android:textColor="#FF563F"
        android:textSize="24sp"
        android:textStyle="bold"
         />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_below="@id/TvS"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/forget_password" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="11dp"
        android:text="Enter the email Address"
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/imageView3" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="associated with your account"
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/textView7" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="9dp"
        android:text="We will send you a link to reset your password"
        android:textColor="#707070"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/textView8"/>

    <EditText
        android:id="@+id/TvPM"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:background="@drawable/login_et"
        android:drawableLeft="@drawable/ic_email_black_24dp"
        android:ems="10"
        android:hint="Email"
        android:layout_centerHorizontal="true"
        android:inputType="none|textEmailAddress"
        android:layout_below="@+id/textView9" />

    <Button
        android:id="@+id/BtnSign"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_background_login"
        android:backgroundTint="#FF563F"
        android:text="Send"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/TvPM"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>