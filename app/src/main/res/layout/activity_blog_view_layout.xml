<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Blogger.BlogViewLayout">
<androidx.appcompat.widget.Toolbar
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="MissingConstraints"
    android:id="@+id/toolbar"
    android:theme="@style/Theme.AppCompat.Light.DarkActionBar"
    android:background="@color/colorPrimary"
    app:titleTextColor="@android:color/white"
    app:title="Blog"
    app:titleMarginStart="10dp"
    >
</androidx.appcompat.widget.Toolbar>

    <ScrollView
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="2"
            tools:ignore="MissingConstraints">
            <TextView
                android:id="@+id/v_passID"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:textSize="15dp"
                android:text="-"
                android:layout_weight="0.5"
                android:visibility="invisible"
                />
            <ImageView
                android:id="@+id/v_imagePic"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/bb_create_blog" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:id="@+id/ll_bvl1"
                android:layout_below="@id/v_imagePic"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/v_tripName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_marginStart="10dp"
                    android:textAlignment="textStart"
                    android:textColor="#FF563F"
                    android:textStyle="bold|italic" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="-"
                    android:layout_marginStart="5dp"
                    android:textAlignment="textStart"
                    android:textColor="#FF563F"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="("
                    android:layout_marginStart="5dp"
                    android:textAlignment="textStart"
                    android:textColor="#FF563F"
                    />
                <TextView
                    android:id="@+id/v_tripStart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textAlignment="textStart"
                    android:textColor="#FF563F"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="-"
                    android:textAlignment="textStart"
                    android:textColor="#FF563F"
                    />
                <TextView
                    android:id="@+id/v_tripEnd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textAlignment="textStart"
                    android:textColor="#FF563F"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text=")"
                    android:textAlignment="textStart"
                    android:textColor="#FF563F"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/ll_bvl1"
                android:id="@+id/ll_bvl2"
                android:weightSum="2">
                <TextView
                    android:id="@+id/v_tripDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:textAlignment="textStart"
                    android:textStyle="italic" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_vBlog"
                android:layout_width="match_parent"
                android:layout_height="430dp"
                android:orientation="vertical"
                android:paddingTop="5dp"
                android:layout_below="@+id/ll_bvl2"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />
        </RelativeLayout>
</ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>